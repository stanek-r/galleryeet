{
  "name": "galleryeet",
  "version": "1.0.0",
  "description": "Personal blog gallery",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "tailwind": "tailwindcss -i ./src/input.css -o ./src/tailwind.v1.css --watch",
    "tailwind:build": "tailwindcss -i ./src/input.css -o ./src/tailwind.v1.css",
    "tailwind:build:prod": "tailwindcss -i ./src/input.css -o ./src/tailwind.v1.css --minify",
    "format": "prettier --write \"./src/**/*.{js,html,php}\"",
    "format-check": "prettier --check \"./src/**/*.{js,html,php}\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/GTomy/galleryeet.git"
  },
  "author": "GTomy",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/GTomy/galleryeet/issues"
  },
  "homepage": "https://gitlab.com/GTomy/galleryeet#readme",
  "devDependencies": {
    "@prettier/plugin-php": "^0.19.4",
    "daisyui": "^2.51.4",
    "prettier": "2.8.5",
    "tailwindcss": "^3.2.7"
  }
}
